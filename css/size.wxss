.text--center {
    text-align: center;
}
.text--left {
    text-align: left;
}
.text--right {
    text-align: right;
}
.text--thin {
    font-weight: 100;
}
.text--bold {
    font-weight: 600;
}

.font-24 {
    font-size: 24px;
}
.font-16 {
    font-size: 16px;
}

.line-height-42 {
    line-height: 42rpx;
}
.line-height-43 {
    line-height: 43rpx;
}

.text--size-small {
    font-size: 24rpx;
}
.text--size-1,.text--small {
    font-size: 28rpx;
}
.text--size-2 {
    font-size: 28rpx;
}
.text--size-3,.text--middle {
    font-size: 32rpx;
}
.text--size-4 {
    font-size: 32rpx;
}
.text--size-5 {
    font-size: 34rpx;
}
.text--large {
    font-size: 36rpx;
}
.text--size-6 {
    font-size: 38rpx;
}


/**
 * 针对 iphone5 的屏幕
 */
 @media screen and (max-width: 330px) {
    .text--size-small {
        font-size: 28rpx;
    }
    .text--size-1,.text--small {
        font-size: 28rpx;
    }
    .text--size-2 {
        font-size: 32rpx;
    }
    .text--size-3,.text--middle {
        font-size: 32rpx;
    }
    .text--size-4 {
        font-size: 36rpx;
    }
    .text--size-5 {
        font-size: 38rpx;
    }
    .text--large {
        font-size: 40rpx;
    }
    .text--size-6 {
        font-size: 42rpx;
    }

    .line-height-42 {
        line-height: 46rpx;
    }
    .line-height-43 {
        line-height: 47rpx;
    }

}

/**
 * 针对 ipad 的屏幕
 */
 @media screen and (min-width: 768px) {
    .text--size-small {
        font-size: 13px;
    }
    .text--size-1,.text--small {
        font-size: 14px;
    }
    .text--size-2 {
        font-size: 16px;
    }
    .text--size-3,.text--middle {
        font-size: 16px;
    }
    .text--size-4 {
        font-size: 18px;
    }
    .text--size-5,.text--large {
        font-size: 19px;
    }
    .text--size-6 {
        font-size: 21px;
    }

    .line-height-42 {
        line-height: 23px;
    }
    .line-height-43 {
        line-height: 22px;
    }
 }
